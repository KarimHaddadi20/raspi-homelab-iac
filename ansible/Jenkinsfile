pipeline {
    agent any
    stages {
        stage('Deploy') {
            steps {
                script {
                    withCredentials([
                        string(credentialsId: 'RASPI_IP', variable: 'IP'),
                        string(credentialsId: 'RASPI_USER', variable: 'USER'),
                        string(credentialsId: 'RASPI_PASS', variable: 'PASS'),
                        file(credentialsId: 'RASPI_SSH_KEY_FILE', variable: 'KEY_PATH')
                    ]) {
                        echo "Déploiement final sur ${IP}..."
                        sh """
                            chmod 600 ${KEY_PATH}
                            ssh -o StrictHostKeyChecking=no -i ${KEY_PATH} ${USER}@${IP} 'rm -rf ~/ansible_deploy && mkdir -p ~/ansible_deploy/ansible/inventory'
                            scp -o StrictHostKeyChecking=no -i ${KEY_PATH} -r ./* ${USER}@${IP}:~/ansible_deploy/
                            
                            ssh -o StrictHostKeyChecking=no -i ${KEY_PATH} ${USER}@${IP} '
                                cd ~/ansible_deploy
                                [ -d ansible ] && cd ansible
                                
                                # LA MAGIE DU GOUROU : On recrée l'inventaire dynamiquement
                                echo "[raspi]" > inventory/hosts.ini
                                echo "localhost ansible_connection=local" >> inventory/hosts.ini
                                
                                ansible-playbook site.yml -i inventory/hosts.ini --extra-vars "ansible_sudo_pass=${PASS}"
                            '
                        """
                    }
                }
            }
        }
    }
}