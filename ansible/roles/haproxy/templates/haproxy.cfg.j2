global
    log stdout format raw local0
    stats socket /tmp/haproxy.stat mode 660 level admin
    stats timeout 30s

defaults
    log global
    mode http
    option httplog
    timeout connect 5s
    timeout client  50s
    timeout server  50s

frontend http-in
    bind *:80
    
    # On envoie tout vers Jenkins sans poser de questions pour valider la connectivité
    default_backend jenkins_backend

backend jenkins_backend
    # PAS DE CHECK : On fait confiance au réseau Docker pour ce test
    server jenkins_srv jenkins:8080
