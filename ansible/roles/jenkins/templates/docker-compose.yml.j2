services:
  jenkins:
    image: jenkins/jenkins:lts
    container_name: jenkins
    restart: unless-stopped
    ports:
      - '8080:8080'
      - '50000:50000'
    volumes:
      - ./jenkins_home:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - proxy
    user: root # Pour que Jenkins puisse utiliser le docker.sock sans soucis de permissions au dÃ©but

networks:
  proxy:
    external: true
